{
  "manifest_version": 3,
  "name": "HELLO PRINT - POS: Impressão de Pedidos no WhatsApp Web",
  "version": "1.0.0.1621",
  "description": "Detecta novos pedidos no WhatsApp Web e os envia para impressão.",
  "permissions": [
    "storage",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://localhost:1952/*"
  ],
    "web_accessible_resources": [{
    "resources": ["sons/*.mp3"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "HELLO PRINT - POS",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

